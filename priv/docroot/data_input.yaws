<html><head><title>Test for "Deals with security" - Input data</title></head>
<body>

<div><h1>Input data:</h1></div>

<erl>

out(A) ->
	ResHtml = case queryvar(A, "result") of
				{ok, V} -> show(V);
				undefined -> show("")
			end,
	ResHtml.

show(_Result) ->
	{ehtml, 
		{form, [{action, "data_process.yaws"}, {method, "post"}],
			{table, [], [
				{tr, [], [
					{td, [], "Security name:"},
					{td, [], {input, [{name, security}, {type, text}]}}
				]},
				{tr, [], [
					{td, [], "Date (dd/mm/yyyy):"},
					{td, [], [
								{input, [{name, transaction_day},  {type, text}, {maxlength, "2"}, {size, "2"}]},
								{select, [{name, transaction_month}], [
										{option, [{value, "1"}], "January"},
										{option, [{value, "2"}], "Febuary"},
										{option, [{value, "3"}], "March"},
										{option, [{value, "4"}], "April"},
										{option, [{value, "5"}], "May"},
										{option, [{value, "6"}], "June"},
										{option, [{value, "7"}], "July"},
										{option, [{value, "8"}], "August"},
										{option, [{value, "9"}], "September"},
										{option, [{value, "10"}], "October"},
										{option, [{value, "11"}], "November"},
										{option, [{value, "12"}], "December"}
									]},
								{input, [{name, transaction_year}, {type, text}, {maxlength, "4"}, {size, "4"}]}
							 ]}
				]},
				{tr, [], [
					{td, [], "Time (hh:mm:ss):"},
					{td, [], [
								{input, [{name, transaction_hour},   {type, text}, {maxlength, "2"}, {size, "2"}]},
								{input, [{name, transaction_minute}, {type, text}, {maxlength, "2"}, {size, "2"}]},
								{input, [{name, transaction_second}, {type, text}, {maxlength, "2"}, {size, "2"}]}
							]}
				]},
				{tr, [], [
					{td, [], "Price:"},
					{td, [], {input, [{name, price}, {type, text}]}}
				]},
				{tr, [], [
					{td, [], "Amount:"},
					{td, [], {input, [{name, amount}, {type, text}]}}
				]},
				{tr, [], [
				    {td, [], ""},
					{td, [], {input, [{type, submit}]}}
				]}
			]}
		}
	}.


</erl>
<div>
	<a href="./index.yaws">Back to home page</a>
</div>


</body>
</html>
